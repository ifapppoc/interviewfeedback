<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:id="@+id/llParent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/app_margin_top">
        <TextView
            android:id="@+id/textViewTopicWithSubtopics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_secondary"/>
        <TextView
            android:id="@+id/textViewModeOfDiscussion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_secondary"
            android:layout_marginTop="@dimen/text_padding_normal"/>

        <TextView
            android:id="@+id/textViewOutcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_padding_normal"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/icon_edit"
            android:drawablePadding="@dimen/text_padding_normal"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_secondary" />
        <TextView
            android:id="@+id/textViewComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_secondary"
            android:layout_marginTop="@dimen/text_padding_normal"/>
    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/colorAccent"/>
</LinearLayout>
