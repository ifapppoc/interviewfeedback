<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/app_margin_top">
        <TextView
            android:id="@+id/textViewTopicWithSubtopics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_primary"/>
        <TextView
            android:id="@+id/textViewModeOfDiscussion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_secondary"
            android:layout_marginTop="@dimen/text_padding_small"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/text_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_padding_small"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_secondary" />

            <ImageView
                android:id="@+id/text_editCommentsButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@id/text_comments"
                android:background="@color/color_white"
                android:src="@drawable/ic_edit_black_24dp"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/colorAccent"/>
</LinearLayout>
